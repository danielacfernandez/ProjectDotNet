@model ServiceTRAX.ViewComponents.WidgetTimesheetSubmitStatusChart.WidgetTimesheetSubmitStatusChartViewModel

<canvas id="@Model.ComponentID" width="400" height="400"></canvas>



<script type="text/javascript" on-content-loaded="true">

    var @(Model.ComponentModelName) = @Html.Raw(Json.Serialize(Model));

    var ctx = document.getElementById('@Model.ComponentID').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',

        data: {

            labels: @(Model.ComponentModelName).labels,
            datasets: [{
                label: 'Approved',
                backgroundColor: '#6da76cb0',
                borderColor: '#2d5daf',
                lineTension: 0,
                data: @(Model.ComponentModelName).approved,
                borderWidth: 1
            }, {
                label: 'Not Submitted',
                backgroundColor: '#b5b148b0',
                borderColor: '#2d5daf',
                lineTension: 0,
                data: @(Model.ComponentModelName).notSubmitted,
                borderWidth: 1
            }, {
                label: 'Rejected',
                backgroundColor: '#c8554ab0',
                borderColor: '#2d5daf',
                lineTension: 0,
                data: @(Model.ComponentModelName).rejected,
                borderWidth: 1
            }]
        },
        options: {
            title: {
                display: true,
                padding: 5,
                text: 'Time Sheet Submit Status'
            },
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                xAxes: [{
                    stacked: true
                }],
                yAxes: [{
                    stacked: true
                }]
            }
        }
    });


</script>
