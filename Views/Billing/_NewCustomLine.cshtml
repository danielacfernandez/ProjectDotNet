<div class="modal fade modal--forms" id="NewCustomLineDialog" data-bind="showModal:isDialogDisplaying"
     tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="NewCustomLineDialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content modal-content--dark-blue">
            <div class="modal-header">
                <h5 class="modal-title mr-auto ucase" id="newInvoiceLabel">Add Invoice Custom Line</h5>
            </div>
            <div class="modal-body">

                @*<div class="form-row mb-3">
                        <div class="col-4">
