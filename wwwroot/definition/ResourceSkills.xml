        <sqlSelect><![CDATA[select 
RS.ResourceSkillId,
RS.SkillID,
S.SkillName, 
S.SkillType,  
RS.SkillLevel, 
@RESOURCE_ID AS RESOURCE_ID_LOCALSCOPE
from 
dbo.ResourceSkill RS with(nolock)  
inner join 
dbo.Skills_V S with(nolock)  
on 
S.SkillId = RS.SkillId  
where 
ResourceId = @RESOURCE_ID]]>
<parameters /></sqlSelect>
        <sqlUpdate where="ResourceSkillId=@RESOURCESKILLID" autoUpdateQuery="False" updateTable=""><![CDATA[update 
	dbo.ResourceSkill 
set 
	SkillID=@SKILLID,
	SkillLevel=@SKILLLEVEL
where 
	ResourceSkillId=@RESOURCESKILLID]]></sqlUpdate>
        <sqlInsert where="[ResourceSkillId]=@@IDENTITY"><![CDATA[if not exists (select * from dbo.ResourceSkill with(nolock)
where ResourceId = @RESOURCE_ID and SkillId = @SKILLID)
insert into 
	dbo.ResourceSkill (ResourceId, SkillId, SkillLevel)
values
	(@RESOURCE_ID, @SKILLID, isnull(@SKILLLEVEL, 0))]]></sqlInsert>
        <sqlDelete><![CDATA[delete from dbo.ResourceSkill
where RESOURCEID=@RESOURCE_ID_LOCALSCOPE
and SKILLID=@SKILLID]]></sqlDelete>
