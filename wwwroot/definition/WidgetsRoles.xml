        <sqlSelect><![CDATA[select 
	WR.WidgetRoleID,
	WR.RoleID,
	WR.IsActive,
	W.WidgetName,
	R.Name as RoleName
from
	dbo.WidgetRole WR
left join
	dbo.Widget W
on
	WR.WidgetID=W.WidgetID
left join
	dbo.AspNetRoles R
on
	WR.RoleID=R.RoleID
where
	WR.WidgetID=@WIDGETID]]>
<parameters /></sqlSelect>
        <sqlUpdate where="WidgetRoleID=@WIDGETROLEID" autoUpdateQuery="False" updateTable=""><![CDATA[update
	dbo.WidgetRole 
set
	[WidgetID]=@WIDGETID,
	[RoleID]=@ROLEID,
	[IsActive]=@ISACTIVE,
	[ModifyTime]=getutcdate()
where
	WidgetRoleID=@WIDGETROLEID]]></sqlUpdate>
        <sqlInsert where="[WidgetRoleID]=@@IDENTITY"><![CDATA[insert into 
	dbo.WidgetRole ([WidgetID], [RoleID], [IsActive], [CreateTime])
values 
	(@WIDGETID, @ROLEID, 1, GETUTCDATE())]]></sqlInsert>
